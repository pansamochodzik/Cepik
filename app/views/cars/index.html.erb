<section class='bg-light' style='min-height: 400px'>
  <div class='container'>
    <div class='row'>
      <div class='col-4'>
      </div>
      <div class='col-5 text-left text-danger'>
        <h1>Welcome To Car List</h1>
      </div>
      <div class='col-3 text-right pt-3'>
        <%= link_to 'Add new car', new_car_path, class: 'btn btn-success' %>
      </div>
    </div>
    <div class='row'>
      <table class='table'>
        <thead class='bg-info text-light'>
          <th>Brand</th>
          <th>Colour</th>
          <th>Vin number</th>
          <th>License plate</th>
          <th>Registration country</th>
          <th>Year of production</th>
          <th>Year of registration</th>
          <th>Distance</th>
          <th>Action</th>
        </thead>
        <% @cars.each do |car| %>
          <tbody class=<%= background_colour(car) %>>
            <td><%= link_to car.brand, car_path(car), class: 'text-dark' %></td>
            <td><%= car.colour %></td>
            <td><%= car.vin_number %></td>
            <td style='white-space: nowrap'><%= car.license_plate %></td>
            <td style='white-space: nowrap'><%= country_name(car) %></td>
            <td><%= car.year_of_production %></td>
            <td><%= car.year_of_registration %></td>
            <td><%= car_distance(car)%></td>
            <td class='pb-0' style='white-space: nowrap'>
              <%= link_to 'Show', car_path(car), class: 'text-dark' %>
              <% if user_signed_in? %> |
                <%= link_to 'Edit', edit_car_path(car), class: 'text-dark' %> |
                <%= link_to 'New distance', new_mileage_path(car_id: car.id), class: 'text-dark' %>
              <% end %>
            </td>
          </tbody>
        <% end %>
      </table>
      <%= will_paginate params: @will_paginate_params, class: 'text-center mx-auto' %>
    </div>
  </div>
</section>
