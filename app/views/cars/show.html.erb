<section class="bg-light" style="min-height: 400px">
  <div class="container">
    <div class="row">
      <table class="table">
        <thead class="bg-info">
          <td>Name</td>
          <td>Colour</td>
          <td>Vin number</td>
          <td>License plate</td>
          <td>Production at</td>
          <td>Registration at</td>
          <td>Action</td>
        </thead>
        <tbody class="bg-warning">
          <td><%= @car.name %></td>
          <td><%= @car.colour %></td>
          <td><%= @car.vin_number %></td>
          <td><%= @car.license_plate %></td>
          <td><%= @car.year_of_production %></td>
          <td><%= @car.year_of_registration %></td>
          <td><%= link_to 'Back', :back %> | <%= link_to 'delete', car_path(@car), method: :delete %> | <%= link_to 'edit', edit_car_path(@car) %> </td>
        </tbody>
      </table>
    </div>
  </div>
</section>
