<section class="bg-light" style="min-height: 800px">
  <div class="container">
    <div class="col-12">
      <div class="m-auto pt-5 text-center">
        <h2>Set/Change your password</h2>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
          <div class="field ml-2">
            <p class="ml-1"><%= f.label :password, "New password", class: "mr-2" %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %></p>
          </div>

          <div class="field">
            <p><%= f.label :password_confirmation, "Confirm new password", class: "mr-2" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mr-5" %></p>
          </div>

          <div class="actions mb-2">
            <%= f.submit "Send me reset password instructions" %>
            <%= f.submit "Set/Change your password" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
